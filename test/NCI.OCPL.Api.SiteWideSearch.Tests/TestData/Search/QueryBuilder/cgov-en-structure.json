{
    "boosting": {
        "negative_boost": 0.5,
        "negative": {
            "bool": {
                "should": [
                    {
                        "bool": {
                            "must": [
                                { "terms": { "searchurl": [ "2012", "2011", "2010", "2013" ] } },
                                { "prefix": { "searchurl.raw": { "value": "www.cancer.gov/news-events/press-releases/" } } }
                            ]
                        }
                    },
                    { "prefix": { "searchurl.raw": { "value": "www.cancer.gov/news-events/media-resources/multicultural/lifelines/" } } },
                    { "match": { "searchurl": { "query": "video" } } }
                ]
            }
        },
        "positive": {
            "bool": {
                "must": [
                    {
                        "bool": {
                            "should": [
                                { "term": { "metatag.content-language": { "value": "en" } } },
                                {
                                    "bool": {
                                        "must_not": [
                                            { "exists": { "field": "metatag.content-language" } }
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "bool": {
                            "should": [
                                { "match": { "content": { "operator": "and", "query": "chicken", "boost": 1.0 } } },
                                { "match_phrase": { "content": { "query": "chicken", "boost": 1.0 } } },
                                { "match_phrase": { "searchtitle": { "query": "chicken", "boost": 1.0 } } },
                                { "match": { "searchtitle": { "query": "chicken", "boost": 1.0 } } },
                                {
                                    "bool": {
                                        "should": [
                                            { "match": { "metatag.description": { "query": "chicken", "boost": 0.01 } } },
                                            { "match_phrase": { "metatag.description": { "query": "chicken", "boost": 0.01 } } }
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ],
                "should": [
                    { "term": { "type": { "value": "text/html", "boost": 4.0 } } },
                    { "match": { "metatag.dcterms.type": { "query": "pdqcancerinfosummary", "boost": 1.2 } } },
                    { "match": { "metatag.dcterms.type": { "query": "cgovcancertypehome", "boost": 1.2 } } },
                    {
                        "bool": {
                            "should": [
                                { "term": { "host": { "value": "www.cancer.gov", "boost": 10.0 } } }
                            ]
                        }
                    }
                ]
            }
        }
    }
}